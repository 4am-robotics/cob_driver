<?xml version="1.0"?>
<launch>

	<!-- send parameters to parameter server -->
	<rosparam command="load" ns="scanner_front" file="$(find cob_sick_s300)/ros/launch/front_$(env ROBOT).yaml"/>

	<node pkg="cob_sick_s300" type="cob_sick_s300" name="scanner_front" respawn="false" output="screen" >
		<remap from="scan" to="scan_front"/>
	</node>

	<param name="hztest1/topic" value="topicPub_LaserScan" />
	<param name="hztest1/hz" value="5.0" />
	<param name="hztest1/hzerror" value="0.1" />
	<param name="hztest1/test_duration" value="5.0" />
	<test test-name="hztest_front" pkg="rostest" type="hztest" name="hztest1" />

</launch>
