<?xml version="1.0"?>
<launch>

	<!-- Initialize base for testing -->
	<!--node name="init_base1" pkg="cob_base" type="init_base.py" /-->
	<test test-name="base_init" pkg="cob_undercarriage_ctrl" type="initialization_test.py"/>

	<!-- hztest /base_controller/state -->
	<param name="hztest_base_controller_state/topic" value="/base_controller/state" />
	<param name="hztest_base_controller_state/hz" value="55.0" />
	<param name="hztest_base_controller_state/hzerror" value="55.0" />
	<param name="hztest_base_controller_state/test_duration" value="8.0" />
	<test test-name="hz_base_controller_state" pkg="rostest" type="hztest" name="hztest_base_controller_state" />

	<!-- hztest /base_odometry/state -->
	<param name="hztest_base_odometry_state/topic" value="/base_odometry/state" />
	<param name="hztest_base_odometry_state/hz" value="55.0" />
	<param name="hztest_base_odometry_state/hzerror" value="55.0" />
	<param name="hztest_base_odometry_state/test_duration" value="2.0" />
	<test test-name="hz_base_odometry_state" pkg="rostest" type="hztest" name="hztest_base_odometry_state" />


</launch>
