<!-- Range imaging sensors -->
<PMDCamCube_0>
  <!-- The master initializes and releases the camera library and is -->
  <!-- responsible for emitting the trigger signal to other cameras -->
  <!-- The slave is synchronizing its image acquisition with the trigger signal -->
  <!-- Valid roles: MASTER oR SLAVE -->
  <Role value="MASTER" />

  <!-- Serial number of the PMD camera -->
  <!-- Set high and low to 0 in order to open first camera on bus -->
  <Serial low="0" high="0" />

  <!-- Set an additional distance offset in m to be used (soft offset). The value will be added -->
  <!-- to all calculated distance values. This is useful if the light sources are not attached -->
  <!-- to the camera but placed at a known distance from it. -->
  <!-- Valid values: Numeric value or DEFAULT -->
  <DistanceOffset value="DEFAULT" />

  <!-- The camera can be configured to output only a certain area of the image. This has -->
  <!-- the effect of lowering the readout time of the sensor and therefore increasing the -->
  <!-- frame rate for smaller image sizes and short integration times. -->
  <!-- <left> and <width> have to be divisible by 3 -->
  <!-- Valid values: For no ROI set all values to DEFAULT -->
  <!-- Valid values: Otherwise specify values in pixel -->
  <ROI left="DEFAULT" top="DEFAULT" width="DEFAULT" height="DEFAULT" />

  <!-- The camera can be put on Suppression of Motion Blur Exposure Mode -->
  <!-- SMB differs from Normal mode in that it minimizes the time needed -->
  <!-- to capture a distance image from the camera. This results in a -->
  <!-- significantly reduced amount of motion artefacts. The downside is, -->
  <!-- that there might be increased levels of noise and that the minimum -->
  <!-- integration time is higher than in Normal mode -->
  <!-- Valid values: AUTO, DEFAULT and SMB -->
  <ExposureMode mode="DEFAULT" />

  <!-- The integration time (1000 = 1ms) of the camera -->
  <!-- Valid values: 12 ... 50000, AUTO, DEFAULT -->
  <IntegrationTime value="2000" />

  <!-- Specifies the prefered calibration method -->
  <!-- Possible values are: MATLAB_NO_Z, MATLAB or NATIVE -->
  <CalibrationMethod name="MATLAB_NO_Z" />

  <!-- Intrinsic parameters -->
  <!-- fx: The focal length in x direction expressed in pixels -->
  <!-- fy: The focal length in y direction expressed in pixels -->
  <!-- cx: x-coordinate of principal point -->
  <!-- cy: y-coordinate of principal point -->
