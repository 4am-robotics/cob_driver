<?xml version="1.0"?>
<launch>

  <!-- send urdf to parameter server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find cob_defs)/ros/robots/cob3-1.urdf.xacro'" />

  <!-- send parameters to parameter server -->
  <rosparam command="load" ns="arm" file="$(find cob_arm)/ros/launch/cob3-1.yaml"/>

  <!-- start powercube_chain -->
  <node pkg="cob_powercube_chain" type="cob_powercube_chain_sim" name="cob_arm" ns="arm" cwd="node" respawn="false" output="screen" launch-prefix="/usr/bin/nemiver"/>

  <!-- start robot_state_publisher -->
  <node pkg="robot_state_publisher" type="state_publisher" name="rob_st_pub" />

</launch>
